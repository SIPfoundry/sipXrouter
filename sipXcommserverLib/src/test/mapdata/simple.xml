      <userPattern>THISUSER</userPattern>
      <userPattern>THATUSER</userPattern>
      <permissionMatch>
        <transform>
          <user>NEWUSER</user>
        </transform>
      </permissionMatch>
    </userMatch>
  </hostMatch>
  <hostMatch>
    <hostPattern>HostChgDOMAIN</hostPattern>
    <userMatch>
      <userPattern>THISUSER</userPattern>
      <userPattern>THATUSER</userPattern>
