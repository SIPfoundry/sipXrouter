    <hostPattern>THISDOMAIN</hostPattern>
    <hostPattern>THISHOST.THISDOMAIN</hostPattern>
    <userMatch>
      <userPattern>THISUSER</userPattern>
      <userPattern>THATUSER</userPattern>
      <permissionMatch>
        <transform>
          <url>sip:NEWUSER@NEWHOST.NEWDOMAIN</url>
        </transform>
      </permissionMatch>
    </userMatch>
  </hostMatch>
