Name: @PACKAGE@
Version: @VERSION@
Release: %{buildno}

Summary: Utilities for sipX
License: LGPL
Group:    Productivity/Telephony/SIP/Utilities
Vendor: SIPfoundry
Packager: SIPfoundry <sipx-dev@sipfoundry.org>
Url: http://www.sipfoundry.org/sipXtools

BuildRequires: automake
BuildRequires: ant-commons-logging
BuildRequires: ant-junit
BuildRequires: ant-nodeps
BuildRequires: nsis
BuildRequires: java-devel >= 1.6
BuildRequires: gcc-c++
BuildRequires: cppunit-devel
BuildRequires: doxygen
BuildRequires: openssl-devel >= 0.9.7a
BuildRequires: pcre-devel >= 4.5
BuildRequires: sipxcommserverlib-devel >= %version
BuildRequires: sipxcommons >= %version
BuildRequires: sipxtacklib-devel >= %version

Source: %name-%version.tar.gz

Requires: sipxcommserverlib >= %version
Requires: sipxcommons >= %version

Prefix: %_prefix
BuildRoot: %{_tmppath}/%name-%version-root

%description
General utilities for sipXpbx system

%prep
%setup -q

%build
%configure @CONFIGURE_OPTIONS@
cp config.log %name.configlog
make all

%install

rm -rf $RPM_BUILD_ROOT
make DESTDIR=$RPM_BUILD_ROOT install

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(644,root,root,755)
%doc CONTRIBUTORS LICENSE README NEWS TODO ChangeLog %name.configlog
%attr(755,root,root) %{_bindir}
%attr(755,@SIPXPBXUSER@,@SIPXPBXGROUP@) %{_datadir}/java/sipXecs/preflight
%attr(755,@SIPXPBXUSER@,@SIPXPBXGROUP@) %{_datadir}/java/sipXecs/sipXviewer/sipviewer.jar
%attr(755,@SIPXPBXUSER@,@SIPXPBXGROUP@) %{_datadir}/sipxecs/sipviewer-install.jar
%{_mandir}/man1
